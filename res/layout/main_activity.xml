<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/main"
        android:background="@android:color/white"
        android:theme="@android:style/Theme.NoTitleBar">
    <FrameLayout
            android:id="@+id/main_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.adtis.fistpproj.activity.NavActivity
                android:id="@+id/nav_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>
    <RelativeLayout
            android:id="@+id/main_leftlayout"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/white">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:background="@android:color/holo_blue_light">
            <com.adtis.fistpproj.util.CircularImageView
                    android:id="@+id/left_user_head"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo"
                    android:layout_marginTop="25dp"
                    app:border="true"
                    app:border_color="#3f51b5"
                    app:border_width="8dp"
                    app:shadow="true"
                    app:shadow_color="#3f51b5"
                    app:shadow_radius="10">
            </com.adtis.fistpproj.util.CircularImageView>
            <TextView
                    android:id="@+id/left_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="12pt"
                    android:layout_gravity="center"
                    android:layout_marginTop="150dp"
                    android:text="UserName"
                    android:textColor="#FFF"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"/>
        </RelativeLayout>
        <ListView
                android:id="@+id/left_drawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="225dp"
                android:divider="#FFF"
                android:dividerHeight="1px"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:background="@android:color/white"/>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>