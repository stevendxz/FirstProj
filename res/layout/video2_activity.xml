<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <VideoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/videoView"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#9a000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout2">
        <ImageView
                android:id="@+id/play"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/iconfont_play"/>
        <!--<ImageView
                android:id="@+id/pause"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/iconfont_pause"/>
        <ImageView
                android:id="@+id/reset"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/iconfont_reset"/>-->
        <ImageView
                android:id="@+id/stop"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/iconfont_stop"
                android:layout_alignTop="@+id/next"
                android:layout_toEndOf="@+id/next"/>
        <ImageView
                android:id="@+id/previous"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/iconfont_previous"
                android:layout_alignTop="@+id/play"
                android:layout_toEndOf="@+id/play"/>
        <ImageView
                android:id="@+id/next"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/iconfont_next"
                android:layout_alignTop="@+id/previous"
                android:layout_toEndOf="@+id/previous"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/fullscreen"
                android:src="@drawable/iconfont_fullscreen"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentEnd="true"/>
        <SeekBar
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/seekBar"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/stop"
                android:layout_toStartOf="@id/fullscreen"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@drawable/seekbar_thumb" android:indeterminate="false"/>
    </RelativeLayout>

</RelativeLayout>