<?xml version="1.0" encoding="utf-8"?>
<com.adtis.fistpproj.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <com.adtis.fistpproj.percent.PercentRelativeLayout
            android:id="@+id/zone_userinfo"
            android:background="@drawable/view_round_rect"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="90%"
            app:layout_widthPercent="90%"
            android:layout_centerInParent="true">
        <!--<ListView
                android:id="@+id/list_userinfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/gray"
                android:dividerHeight="1dp"/>-->
        <include layout="@layout/info_show_view"
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"/>

        <Button
                android:id="@+id/btn_save_userinfo"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="保存"
                android:textColor="@color/white"
                android:background="@drawable/btn_select"
                android:layout_toStartOf="@+id/btn_update_userinfo"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"/>
        <Button
                android:id="@+id/btn_update_userinfo"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="修改"
                android:textColor="@color/white"
                android:background="@drawable/btn_select"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"/>
    </com.adtis.fistpproj.percent.PercentRelativeLayout>

</com.adtis.fistpproj.percent.PercentRelativeLayout>
