<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="navigation">
        <attr name="btn_leftText" format="string" />
        <attr name="btn_rightText" format="string" />
        <attr name="tv_title" format="string" />
        <attr name="left_drawable" format="reference"></attr>
        <attr name="right_drawable" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="CircularImageView">
        <attr name="border" format="boolean"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="shadow" format="boolean"/>
        <attr name="shadow_color" format="color"/>
        <attr name="shadow_radius" format="float"/>
    </declare-styleable>

    <declare-styleable name="Theme">
        <attr name="circularImageViewStyle" format="reference"/>
    </declare-styleable>
</resources>